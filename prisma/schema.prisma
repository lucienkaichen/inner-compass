generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        Int      @id @default(autoincrement())
  content   String
  mood      String? 
  tags      String?  
  analysis  Analysis?
  createdAt DateTime @default(now())
}

model Analysis {
  id        Int      @id @default(autoincrement())
  entryId   Int      @unique
  entry     Entry    @relation(fields: [entryId], references: [id])
  summary   String?
  moodScore Int?     // 1-10
  patterns  String?  // JSON array of detected patterns
  createdAt DateTime @default(now())
}

model Strategy {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String?  // e.g., "CBT", "Mindfulness", "Action"
  trigger   String?  // Keywords that trigger this strategy
  isAiGenerated Boolean @default(false)
  createdAt DateTime @default(now())
}

