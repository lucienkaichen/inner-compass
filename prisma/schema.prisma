generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Entry {
  id        Int      @id @default(autoincrement())
  content   String
  mood      String? 
  tags      String?  
  analysis  Analysis?
  createdAt DateTime @default(now())
}

model Analysis {
  id        Int      @id @default(autoincrement())
  entryId   Int      @unique
  entry     Entry    @relation(fields: [entryId], references: [id])
  summary   String?
  // moodScore removed as requested
  patterns  String?  // JSON array of Cognitive Distortions (e.g., ["災難化思考"])
  emotionTags String? // JSON array of AI-detected tags (e.g., ["焦慮", "期待"])
  connections String? // AI analysis of links to past entries
  customInsights String? // JSON object for dynamic analysis items (e.g. {"溝通模式": "...", "睡眠品質": "..."})
  createdAt DateTime @default(now())
}

model Strategy {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  category  String?  // e.g., "CBT", "Mindfulness", "Action"
  trigger   String?  // Keywords that trigger this strategy
  isAiGenerated Boolean @default(false)
}

model EmotionGuide {
  id        Int      @id @default(autoincrement())
  emotion   String   @unique // e.g., "焦慮", "生氣"
  strategy  String   // Long text: Customized strategy for this emotion
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

